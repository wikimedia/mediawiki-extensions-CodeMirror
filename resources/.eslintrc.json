{
	"root": true,
	"extends": [
		"wikimedia/client-es5",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"globals": {
		"CodeMirror": "readonly"
	},
	"rules": {
		"max-len": "off",
		"no-implicit-globals": "off"
	},
	"overrides": [
		{
			"files": [
				"addon/edit/*.js"
			],
			"rules": {
				"computed-property-spacing": [ "error", "never" ],
				"indent": [ "error", 2 ]
			}
		}
	],
	"ignorePatterns": [ "dist/" ]
}
